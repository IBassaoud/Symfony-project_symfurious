{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
<div class="min-w-screen min-h-screen bg-slate-200 flex items-center justify-center px-5 py-5">
		<div class="bg-gray-100 text-gray-500 rounded-3xl shadow-xl w-full overflow-hidden" style="max-width:400px">
			<div class="md:flex w-full">
                
				<div class="w-full py-10 px-5 md:px-10">
					<div class="text-center mb-4">
						<h1 class="font-bold text-3xl text-gray-900">SIGN IN</h1>
						<p>Enter your information to sign in</p>
					</div>					
                    {% if app.user %}
                        <div class="flex items-center bg-blue-500 text-white text-sm font-bold px-4 py-3 mb-3" role="alert">
                            <svg class="fill-current w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z"/></svg>
                            <p>You are logged in as {{ app.user.userIdentifier }}, <a class="text-red-500" href="{{ path('app_logout') }}">Logout</a></p>
                        </div>
                    {% endif %}
                     {% if error %}
                        <div class="text-center text-red-500 text-1xl font-bold mb-4">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form method="post">
					<div class="flex -mx-3">
						<div class="w-full px-3 mb-5">
                            <label for="inputEmail" class="block uppercase tracking-wide text-gray-700 text-xs font-semibold mb-2">Email</label>
							<div class="flex">
								<div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">
									<i class="mdi mdi-email-outline text-gray-400 text-lg"></i>
								</div>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500" autocomplete="email" required autofocus>
							</div>
						</div>
					</div>
					<div class="flex -mx-3">
						<div class="w-full px-3 mb-5">
                            <label for="inputPassword" class="block uppercase tracking-wide text-gray-700 text-xs font-semibold mb-2">Password</label>
							<div class="flex">
								<div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">
									<i class="mdi mdi-lock-outline text-gray-400 text-lg"></i>
								</div>
								<input type="password" name="password" id="inputPassword" class="w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500" autocomplete="current-password" required>
                                <input type="hidden" name="_csrf_token"
                                    value="{{ csrf_token('authenticate') }}">
                            </div>
						</div>
					</div>
					{# <div class="flex items-center justify-between mb-4">
						<div class="flex items-center">
							{{ form_widget(registrationForm.agreeTerms, { 'attr': {'class': 'h-4 w-4 ml-4 bg-blue-500 focus:ring-blue-400 border-gray-300 rounded'} }) }}
							<label for="agreeTerms" class="ml-2 block text-sm text-gray-900">
								Agree terms
							</label>
						</div>
					</div> #}
					<div class="flex -mx-3">
						<div class="w-full px-3 mb-5">
							<button type="submit" class="block w-full max-w-xs mx-auto bg-indigo-500 hover:bg-indigo-700 focus:bg-indigo-700 text-white rounded-lg px-3 py-3 font-semibold">Sign in</button>
						</div>
					</div>
                </form>
				</div>
			</div>
		</div>
	</div>

{% endblock %}