{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
<div class="flex justify-center my-2 mx-4 md:mx-0">
    <form method="post" class="w-full max-w-xl bg-white rounded-lg shadow-md p-6">
        <div class="flex justify-center flex-wrap -mx-3 mb-6">
                
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="flex items-center bg-blue-500 text-white text-sm font-bold px-4 py-3 mb-3" role="alert">
                    <svg class="fill-current w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z"/></svg>
                    <p>You are logged in as {{ app.user.userIdentifier }}, <a class="text-red-500" href="{{ path('app_logout') }}">Logout</a></p>
                </div>
            {% endif %}

            <div class="w-full md:w-full px-3 mb-6">
            <h1 class="text-4xl tracking-tight mb-3 font-weight-normal">Please sign in</h1>
                <label for="inputEmail" class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none" autocomplete="email" required autofocus>
            </div>
            <div class="w-full md:w-full px-3 mb-6">
                <label for="inputPassword" class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control appearance-none block w-full bg-white text-gray-900 font-medium border border-gray-400 rounded-lg py-3 px-3 leading-tight focus:outline-none" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
            <div class="w-full md:w-full px-3 mb-6">
                <button class="appearance-none block w-full bg-blue-600 text-gray-100 font-bold border border-gray-200 rounded-lg py-3 px-3 leading-tight hover:bg-blue-500 focus:outline-none focus:bg-white focus:border-gray-500" type="submit">
                    Sign in
                </button>
            </div>
        </div>
    </form>
</div>
{% endblock %}