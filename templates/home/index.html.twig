{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    {% if app.user %}
        <div class="flex items-center bg-blue-500 text-white text-sm font-bold px-4 py-4" role="alert">
            <p>Hello {{ app.user.firstname }} {{ app.user.lastname }} !</p>
        </div>
    {% endif %}
<div class="min-w-screen min-h-screen bg-slate-200 flex items-center justify-center flex-wrap px-5 py-5">

    <h1>Hello {{ controller_name }}! ✅</h1>
        {############## RACES ##############}
		<div class="md:flex md:flex-wrap bg-gray-100 text-gray-500 rounded-3xl shadow-xl w-full overflow-hidden max-w-[1300px]">
			<div class="w-full md:w-1/2 min-w-[18.75rem] md:flex bg-indigo-400 my-2 md:my-0">
                
                {############## LIST OF UPCOMING RACES ##############}
				<div class="w-full py-10 px-5 md:px-10">
                <h2>Table : Liste des prochaines courses</h2>

				</div>
			</div>

                {############## LIST RACING RESULTS ##############}
			<div class="w-full md:w-1/2 min-w-[18.75rem] md:flex bg-indigo-200 my-2 md:my-0">
                
				<div class="w-full py-10 px-5 md:px-10">
                <h2>Table : Liste résultat des courses</h2>

				</div>
			</div>
		</div>

        {############## LIST OF ALL PILOTS ##############}
		<div class="bg-gray-100 text-gray-500 rounded-3xl shadow-xl w-full overflow-hidden max-w-[1200px]">
			<div class="md:flex w-full">
                
				<div class="w-full py-10 px-5 md:px-10">
                <h2>Table : Liste de tout les pilotes</h2>

				</div>
			</div>
		</div>

	</div>
{% endblock %}
