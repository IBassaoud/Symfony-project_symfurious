{% extends 'base.html.twig' %}

{% block title %}Profile
{% endblock %}

{% block sidebar %}
{% include "sidebar.html.twig" %}
{% endblock %}

{% block body %}
<div class="min-w-screen w-full min-h-screen bg-cyan-600 flex items-center justify-center px-5 py-5">

	<div class="bg-gray-100 text-gray-500 rounded-3xl shadow-xl w-full overflow-hidden" style="max-width:600px">
		<div class="md:flex w-full">
			
			<div class="w-full py-10 px-5 md:px-10">
				<div class="w-full px-3 mb-5 right-0">
					<div class="w-4 mr-2 transform hover:text-blue-500 hover:scale-110">
						<a href="{{ path('admins_users') }}">
							<i class="fa fa-arrow-left"></i>
						</a>
					</div>
				</div>
				 <form method="post" class="float-right" action="{{ path('users_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
						<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
						<button class="btn text-red-500">Delete</button>
					</form>

				<div class="text-center mb-4">
					<h1 class="font-bold text-3xl text-gray-900 uppercase">Update user</h1>
				</div>
				{{ form_start(form) }}
					<div class="flex -mx-3">
						<div class="w-1/2 px-3 mb-5">
							<label for="" class="text-xs font-semibold px-1">First name</label>
							<div class="flex">
								<div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">
									<i class="mdi mdi-account-outline text-gray-400 text-lg"></i>
								</div>
								{{ form_widget(form.firstname, { 'attr' : {'class': 'w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500'}} ) }}
							</div>
						</div>
						<div class="w-1/2 px-3 mb-5">
							<label for="" class="text-xs font-semibold px-1">Last name</label>
							<div class="flex">
								<div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">
									<i class="mdi mdi-account-outline text-gray-400 text-lg"></i>
								</div>
								{{ form_widget(form.lastname, { 'attr' : {'class': 'w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500'}} ) }}
							</div>
						</div>
					</div>
					
					<div class="flex -mx-3">
						<div class="w-full px-3 mb-2">
							<label for="" class="text-xs font-semibold px-1">Email</label>
							<div class="flex">
								<div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">
									<i class="mdi mdi-email-outline text-gray-400 text-lg"></i>
								</div>
								{{ form_widget(form.email, { 'attr' : {'class': 'w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-indigo-500'}} ) }}
							</div>
						</div>
					</div>
					<div class='text-center text-red-500 text-1xl font-bold'>
                        {{ form_errors(form.email) }}
					</div>

					<div class="flex items-center my-2">
					<input type="checkbox" id="registration_form_role_driver" name="registration_form[roles]" class="h-4 w-4 bg-blue-500 focus:ring-blue-400 border-gray-300 rounded" value="ROLE_DRIVER" />
						{# {{ form_widget(user.agreeTerms, { 'attr': {'class': 'h-4 w-4 bg-blue-500 focus:ring-blue-400 border-gray-300 rounded'} }) }} #}
						<label for="role_driver" class="text-xs font-semibold px-1">
							Role driver
						</label>
					</div>
					<div class="flex items-center my-2">
						<input type="checkbox" id="registration_form_role_admin" name="registration_form[roles]" class="h-4 w-4 bg-blue-500 focus:ring-blue-400 border-gray-300 rounded" value="ROLE_ADMIN" />
						<label for="role_admin" class="text-xs font-semibold px-1">
							Role admin
						</label>
					</div>

					<div class="flex -mx-3">
						<div class="w-full px-3 mb-5">
							<button type="submit" class="uppercase block w-full max-w-xs mx-auto bg-indigo-500 hover:bg-indigo-700 focus:bg-indigo-700 text-white rounded-lg px-3 py-3 font-semibold">update</button>
						</div>
					</div>
				{{ form_end(form) }}

				<div class="flex -mx-3 sticky top-[100vh]">
					<div class="w-1/2 px-3">
						<label for="" class="text-xs font-semibold px-1">Registration date</label>
						<div class="flex text-xs font-semibold px-1">
							{# <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">
								<i class="mdi mdi-account-outline text-gray-400 text-lg"></i>
							</div> #}
							{{ user.createdAt ? user.createdAt|date('F Y') : ''  }}			
						</div>
					</div>
					<div class="w-1/2 px-3">
						<label for="" class="text-xs font-semibold px-1">Last modification</label>
						<div class="flex text-xs font-semibold px-1">
							{{ user.updatedAt ? user.updatedAt|date('F Y') : '' }}
						</div>
					</div>
				
				</div>
			</div>
		</div>
	</div>
	
</div>
{% endblock %}
